<p id="notice"><%= notice %></p>

<h1>Counters</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>Start time</th>
      <th>End date</th>
      <th>End time</th>
      <th>Expired text</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counters.each do |counter| %>
  
      <tr>
        <td><%= counter.start_date %></td>
        <td><%= counter.start_time %></td>
        <td><%= counter.end_date %></td>
        <td><%= counter.end_time %></td>
        <td><%= counter.expired_text %></td>
        <td><%= link_to 'Show', counter %></td>
        <td><%= link_to 'Edit', edit_counter_path(counter) %></td>
        <td><%= link_to 'Destroy', counter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

